
<div class="row">
    <div class="col-lg-6 col-12  offset-lg-3">
        <h3 class="text-center">Registration for {{event.name}}</h3>
        <form method="POST" action="/events/register">

            <div class="form-group row">
                <div class="col">
                    <label for="teamName"> Event Name</label>
                    <input type="text" class="form-control muted" id="eventName" name="eventName" value="{{event.name}}">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label for="headName">Team Head Name</label>
                    <input type="text" class="form-control" id="headName" name="teamHead" placeholder="First name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label for="teamName"> Team Name</label>
                    <input type="text" class="form-control" id="teamName" name="teamName" placeholder="Team name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label for="memberCount"> Number of members in team</label>
                    <input type="number" class="form-control" id="memberCount" name="memberCount" placeholder="4 or 5">
                </div>
            </div>

            <div class="form-group">
                <label for="subCategory">Select the sub Category</label>
                <select class="form-control" id="subCategory" name="subCategory">
                    {{#each event.catg as |subCategory| }}
                        <option name="{{subCategory}}">{{subCategory}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group row">

                <div class="col">
                    <label for="collegeName"> College Name</label>
                    <input type="text" class="form-control" id="collegeName"name="collegeName" placeholder="College Name">
                </div>
            </div>

            <div class="form-group row">

                <div class="col">
                    <label for="emailId"> Email Id</label>
                    <input type="email" class="form-control" id="emailId" name="emailId" placeholder="Email Id">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label for="contactNo"> Contact No.</label>
                    <input type="text" class="form-control" id="contactNo" name="contactNo" placeholder="Contact No.">
                </div>
            </div>
            <input type="submit" class="btn btn-primary">

        </form>
    </div>
</div>